@{
    ViewData["Title"] = "Welcome to PetLens";
}

<div class="text-center">
    <h1 class="display-4">Welcome to PetLens!</h1>
    <p class="lead">Capture beautiful memories with your furry friends.</p>

    <p>PetLens is a dedicated platform for booking professional pet photography sessions. Whether it's a playful puppy shoot or a heartfelt senior portrait, we help you create lasting memories.</p>

    <hr />

    <div class="d-flex justify-content-center gap-3">
        <a class="btn btn-primary btn-lg" asp-controller="Bookings" asp-action="Create">Book a Session</a>
        <a class="btn btn-outline-secondary btn-lg" asp-controller="Services" asp-action="Index">Explore Services</a>
    </div>
</div>

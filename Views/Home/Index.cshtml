@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">🐾 Welcome to Pet Photography Booking!</h1>
    <p class="lead">Professional photography sessions for your beloved pets</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title">👥 Pet Owners</h3>
                <p class="card-text">Register your information and manage your pet profiles for booking sessions.</p>
                <a class="btn btn-primary" href="/Owner">Manage Owners</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title">🐕 Pets</h3>
                <p class="card-text">Add your pets' information and view their photography session history.</p>
                <a class="btn btn-primary" href="/Pet">View Pets</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title">📸 Photographers</h3>
                <p class="card-text">Browse professional photographers and their specialties.</p>
                <a class="btn btn-primary" href="/Photographer">Find Photographers</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title">📅 Book a Session</h3>
                <p class="card-text">Schedule a photography session with your preferred photographer.</p>
                <a class="btn btn-success btn-lg" href="/Booking">Book Now</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body text-center">
                <h3 class="card-title">🔔 Notifications</h3>
                <p class="card-text">Check your booking confirmations and updates.</p>
                <a class="btn btn-info" href="/Notification">View Notifications</a>
            </div>
        </div>
    </div>
</div>
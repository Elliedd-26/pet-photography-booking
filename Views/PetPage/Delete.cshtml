@model PetPhotographyApp.Models.Pet

@{
    ViewData["Title"] = "Delete Pet";
}

<h1>Delete Pet</h1>

<h4>Are you sure you want to delete this pet?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Species</dt>
    <dd class="col-sm-10">@Model.Species</dd>

    <dt class="col-sm-2">Breed</dt>
    <dd class="col-sm-10">@Model.Breed</dd>

    <dt class="col-sm-2">Owner</dt>
    <dd class="col-sm-10">@Model.Owner?.Name</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="PetId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

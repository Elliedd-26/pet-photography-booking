@model IEnumerable<PetPhotographyApp.Models.Photographer>

@{
    ViewData["Title"] = "Photographers";
    var isAdmin = Context.Session.GetString("UserRole") == "Admin";
}

<h1>Photographers</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Photographer</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.PhotographerId" class="btn btn-sm btn-info">Details</a>

                @if (isAdmin)
                {
                    <a asp-action="Edit" asp-route-id="@item.PhotographerId" class="btn btn-sm btn-warning ms-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.PhotographerId" class="btn btn-sm btn-danger ms-1">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@model PetPhotographyApp.Models.Photographer

@{
    ViewData["Title"] = "Delete Photographer";
}

<h1>Delete Photographer</h1>

<h4>Are you sure you want to delete this photographer?</h4>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>

    <dt class="col-sm-2">Specialty</dt>
    <dd class="col-sm-10">@Model.Specialty</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PhotographerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model Photography_Booking_System.Models.Photographer
@{
    ViewData["Title"] = "Photographer Details";
}

<h2>Photographer Details</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Specialty</dt>
    <dd class="col-sm-10">@Model.Specialty</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.PhotographerId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

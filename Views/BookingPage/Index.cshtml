@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@model IEnumerable<PetPhotographyApp.Models.ViewModels.BookingSummaryViewModel>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Owner</th>
            <th>Pet</th>
            <th>Photographer</th>
            <th>Services</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BookingDate.ToShortDateString()</td>
            <td>@item.OwnerName</td>
            <td>@item.PetName</td>
            <td>@item.PhotographerName</td>
            <td>@item.ServiceCount</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

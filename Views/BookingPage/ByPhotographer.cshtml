@model IEnumerable<PetPhotographyApp.Models.ViewModels.BookingSummaryViewModel>

@{
    ViewData["Title"] = "Bookings by Photographer";
}

<h1>Bookings by Photographer</h1>

@if (!Model.Any())
{
    <p>No bookings found for this photographer.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Owner</th>
                <th>Pet</th>
                <th>Location</th>
                <th>Services</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>@item.OwnerName</td>
                <td>@item.PetName</td>
                <td>@item.Location</td>
                <td>@item.ServiceCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
<a asp-action="Index" class="btn btn-secondary mt-3">Back to All Bookings</a>

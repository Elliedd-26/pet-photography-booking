@model PetPhotographyApp.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1>Delete Booking</h1>

<h4>Are you sure you want to delete this booking?</h4>
<dl class="row">
    <dt class="col-sm-3">Booking Date</dt>
    <dd class="col-sm-9">@Model.BookingDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Owner</dt>
    <dd class="col-sm-9">@Model.Owner?.Name</dd>

    <dt class="col-sm-3">Pet</dt>
    <dd class="col-sm-9">@Model.Pet?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

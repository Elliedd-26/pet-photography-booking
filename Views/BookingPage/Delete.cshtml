@model Photography_Booking_System.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h4>Are you sure you want to delete this booking?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @* This is a hidden input ensures the ID is passed on form submission *@
        <input type="hidden" asp-for="BookingId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model Photography_Booking_System.Models.ViewModels.BookingDetailsViewModel

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Booking.BookingDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Booking.Location</dd>

    <dt class="col-sm-2">Client</dt>
    <dd class="col-sm-10">@Model.Booking.ClientName</dd>

    <dt class="col-sm-2">Photographer</dt>
    <dd class="col-sm-10">@Model.Booking.PhotographerName</dd>

    <dt class="col-sm-2">Services</dt>
    <dd class="col-sm-10">
        <ul>
            @foreach (var service in Model.Booking.Services)
            {
                <li>@service.Name ($@service.Price.ToString("0.00"))</li>
            }
        </ul>
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Booking.BookingId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

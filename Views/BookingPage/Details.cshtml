@model PetPhotographyApp.Models.ViewModels.BookingDetailsViewModel

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<dl class="row">
    <dt class="col-sm-3">Booking Date</dt>
    <dd class="col-sm-9">@Model.Booking.BookingDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Booking.Location</dd>

    <dt class="col-sm-3">Owner</dt>
    <dd class="col-sm-9">@Model.Booking.OwnerName</dd>

    <dt class="col-sm-3">Pet</dt>
    <dd class="col-sm-9">@Model.Booking.PetName</dd>

    <dt class="col-sm-3">Photographer</dt>
    <dd class="col-sm-9">@Model.Booking.PhotographerName</dd>

    <dt class="col-sm-3">Services</dt>
    <dd class="col-sm-9">
        <ul>
        @foreach (var service in Model.Booking.Services)
        {
            <li>@service.Name</li>
        }
        </ul>
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Booking.BookingId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

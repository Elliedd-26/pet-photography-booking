@model Photography_Booking_System.Models.Booking_Service

@{
    ViewData["Title"] = "Delete Booking Service";
}

<h2>Delete Booking Service</h2>

<h4>Are you sure you want to delete this service from the booking?</h4>

<dl class="row">
    <dt class="col-sm-2">Booking ID</dt>
    <dd class="col-sm-10">@Model.BookingId</dd>

    <dt class="col-sm-2">Service</dt>
    <dd class="col-sm-10">@Model.Service?.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <input type="hidden" asp-for="ServiceId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

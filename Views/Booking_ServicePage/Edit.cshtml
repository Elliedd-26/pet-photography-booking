@model PetPhotographyApp.Models.ViewModels.BookingServiceViewModel

@{
    ViewData["Title"] = "Edit Booking Service";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label>Booking ID</label>
        <input class="form-control" value="@Model.BookingId" disabled />
    </div>

    <div class="form-group">
        <label asp-for="ServiceId" class="control-label">Select New Service</label>
        <select asp-for="ServiceId" class="form-control" asp-items="Model.Services"></select>
        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

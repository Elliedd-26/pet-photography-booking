@model IEnumerable<Photography_Booking_System.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h2>Services</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Service</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@($"${service.Price:N2}")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@service.ServiceId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@service.ServiceId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@service.ServiceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

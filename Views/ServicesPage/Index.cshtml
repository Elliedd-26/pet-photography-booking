@model IEnumerable<PetPhotographyApp.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h1>Services</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Service</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-controller="ServicesPage" asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a> |
                <a asp-controller="ServicesPage" asp-action="Details" asp-route-id="@item.ServiceId">Details</a> |
                <a asp-controller="ServicesPage" asp-action="Delete" asp-route-id="@item.ServiceId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

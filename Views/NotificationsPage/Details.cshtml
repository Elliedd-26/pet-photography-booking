@model PetPhotographyApp.Models.Notification

@{
    ViewData["Title"] = "Notification Details";
}

<h1>Notification Details</h1>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Message</dt>
    <dd class="col-sm-10">@Model.Message</dd>

    <dt class="col-sm-2">Recipient</dt>
    <dd class="col-sm-10">@Model.RecipientOwner.Name</dd>

    <dt class="col-sm-2">Sent At</dt>
    <dd class="col-sm-10">@Model.SentAt.ToString("f")</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.NotificationId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@model PetPhotographyApp.Models.Notification

@{
    ViewData["Title"] = "Edit Notification";
}

<h1>Edit Notification</h1>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Model binding failed:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<form asp-action="Edit" asp-route-id="@Model.NotificationId" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="NotificationId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
    </div>
    <div class="form-group">
    <label asp-for="RecipientOwnerId"></label>
    <select asp-for="RecipientOwnerId" class="form-control" asp-items="@(ViewData["RecipientOwnerId"] as SelectList)">
        <option value="">-- Select Owner --</option>
    </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

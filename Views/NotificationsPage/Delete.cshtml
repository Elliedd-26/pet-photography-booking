@model PetPhotographyApp.Models.Notification

@{
    ViewData["Title"] = "Delete Notification";
}

<h1>Delete Notification</h1>

<h4>Are you sure you want to delete this notification?</h4>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Message</dt>
    <dd class="col-sm-10">@Model.Message</dd>

    <dt class="col-sm-2">Recipient</dt>
    <dd class="col-sm-10">@Model.RecipientOwner.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="NotificationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

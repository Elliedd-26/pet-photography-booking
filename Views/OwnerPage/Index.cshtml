@model IEnumerable<PetPhotographyApp.Models.Owner>

@{
    ViewData["Title"] = "Owners";
}

<h1>Owners</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Owner</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Owner ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>@item.OwnerId</td>
        <td>@item.Name</td>
        <td>@item.Email</td>
        <td>@item.PhoneNumber</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.OwnerId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.OwnerId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.OwnerId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>


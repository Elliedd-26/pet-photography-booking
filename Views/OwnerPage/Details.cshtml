@model PetPhotographyApp.Models.Owner

@{
    ViewData["Title"] = "Owner Details";
}

<h1>Owner Details</h1>

<div>
    <dl class="row"></dl>
    <dt class="col-sm-2">Owner ID</dt>
    <dd class="col-sm-10">@Model.OwnerId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.OwnerId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

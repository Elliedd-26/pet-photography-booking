@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetLens</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">PetLens</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BookingPage" asp-action="Index">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PetPage" asp-action="Index">Pets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PhotographersPage" asp-action="Index">Photographers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ServicesPage" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NotificationsPage" asp-action="Index">Notifications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OwnerPage" asp-action="Index">Owners</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (HttpContextAccessor.HttpContext?.Session?.GetString("UserRole") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">👤 @HttpContextAccessor.HttpContext?.Session?.GetString("UserEmail")</span>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link text-secondary">Role: @HttpContextAccessor.HttpContext?.Session?.GetString("UserRole")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top text-muted text-center mt-4">
        <div class="container">&copy; @DateTime.Now.Year - PetLens</div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
